# Google AI API Configuration
GOOGLE_API_KEY="your_google_api_key_here"

# PostgreSQL Cache Database (Required)
CACHE_DB_URI="postgresql://username:password@localhost:5432/cache_db"

# Security Configuration (Required for production)
CSRF_SECRET="your_csrf_secret_key_here_32_chars_minimum"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Target Database Configuration (PostgreSQL for SQL execution)
# For local development
TARGET_DB_URI="postgresql://postgres:postgres@localhost:5432/testdb"
