# Google AI API Configuration
GOOGLE_API_KEY="your_google_api_key_here"


# ChromaDB Configuration (vector storage and query caching)
# For local development
CHROMA_HOST="localhost"
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME="sql_queries"
CHROMA_PERSIST_DIRECTORY="./chroma_data"
# For Docker development (automatically set in docker-compose.dev.yml)
# CHROMA_HOST="chromadb"

# Security Configuration (Required for production)
CSRF_SECRET="your_csrf_secret_key_here_32_chars_minimum"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Target Database Configuration (PostgreSQL for SQL execution)
# For local development
TARGET_DB_URI="postgresql://postgres:postgres@localhost:5432/applydb"
# For Docker development (automatically set in docker-compose.dev.yml)
# TARGET_DB_URI="postgresql://postgres:postgres@postgres:5432/applydb"
# Metadata Database Configuration (stores vectorization jobs, table configs, etc.)
METADATA_DATABASE_URL="postgresql://username:password@localhost:5432/metadatadb"

# Cache Configuration
SIMILARITY_THRESHOLD=0.8

# Flask Configuration
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000